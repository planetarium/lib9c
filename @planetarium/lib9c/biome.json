{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useNodejsImportProtocol": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "overrides": [
    {
      "include": ["tests/actions/common.ts"],
      "linter": {
        "enabled": true,
        "rules": {
          "suspicious": {
            "noExportsInTest": "off"
          }
        }
      }
    }
  ]
}
